{
  "version": "1.0.0",
  "orchestrator": {
    "max_retries": 3,
    "timeout_seconds": 300,
    "lease_duration_seconds": 600
  },
  "paths": {
    "event_log": ".claude/events/log.ndjson",
    "workspaces": ".claude/workspaces",
    "registry_db": ".claude/registry/files.db",
    "snapshots": ".claude/snapshots/tasks.json"
  },
  "conventions": {
    "path_pattern": "src/{domain}/{component}/{layer}",
    "naming": {
      "components": "PascalCase",
      "functions": "camelCase",
      "files": "kebab-case"
    }
  }
}